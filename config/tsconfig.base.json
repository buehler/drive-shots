{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": true,
    "outDir": "../build",
    "rootDir": "../src",
    "declaration": false,
    "sourceMap": false,
    "importHelpers": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["es2017", "dom"]
  },
  "include": ["../src/**/*"],
  "exclude": ["../node_modules", "../build"]
}
