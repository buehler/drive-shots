{
  "name": "drive-shots",
  "version": "0.0.0-development",
  "description": "electron app that works with google drive to save screenshots and copy shortened url into the clipboard",
  "main": "build/main.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "electron .",
    "clean": "del-cli ./dist ./build ./coverage",
    "copy-assets": "cp-cli -d ./src/assets ./build/assets",
    "build": "npm run clean && tsc -p ./config/tsconfig.build.json && npm run copy-assets",
    "develop": "npm run clean && npm run copy-assets && tsc -p .",
    "lint": "tslint -c ./tslint.json -p ./config/tsconfig.build.json",
    "test": "npm run lint && npm run clean && jest -c ./jest.json",
    "test:watch": "npm run clean && jest -c ./jest.json --watch",
    "semantic-release": "semantic-release",
    "builder": "electron-builder --publish always --prerelease false --draft false"
  },
  "keywords": [
    "electron",
    "screenshots",
    "google drive"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/buehler/drive-shots.git"
  },
  "engines": {
    "node": ">=7",
    "npm": "*"
  },
  "author": "Christoph BÃ¼hler <christoph.buehler@bluewin.ch>",
  "license": "MIT",
  "build": {
    "appId": "ch.cbue.drive-shots",
    "productName": "Drive Shots",
    "publish": {
      "provider": "github",
      "releaseType": "release"
    },
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "src/_build-resources"
    },
    "mac": {
      "extendInfo": {
        "LSBackgroundOnly": 1,
        "LSUIElement": 1
      }
    },
    "linux": {
      "category": "Utility"
    }
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/github"
    ],
    "getLastRelease": "@semantic-release/git",
    "publish": [
      "@semantic-release/github"
    ]
  },
  "dependencies": {
    "chokidar": "^2.0.0",
    "electron-json-config": "^1.5.0",
    "electron-updater": "^2.18.2",
    "googleapis": "^23.0.0",
    "inversify": "^4.9.0",
    "mime": "^2.1.0",
    "moment": "^2.20.1",
    "opn": "^5.1.0",
    "reflect-metadata": "^0.1.10",
    "tslib": "^1.8.1",
    "util.promisify": "^1.0.0"
  },
  "devDependencies": {
    "@semantic-release/git": "^2.0.1",
    "@types/chokidar": "^1.7.4",
    "@types/jest": "^21.1.8",
    "@types/node": "^7",
    "cp-cli": "^1.1.0",
    "del-cli": "^1.1.0",
    "electron": "^1.7.9",
    "electron-builder": "^19.48.3",
    "jest": "^21.2.1",
    "semantic-release": "^12.1.0",
    "ts-jest": "^21.2.4",
    "tslint": "^5.8.0",
    "tslint-config-airbnb": "^5.4.2",
    "tsutils": "^2.13.0",
    "typescript": "^2.6.2"
  }
}
