{
  "name": "drive-shots",
  "version": "0.0.0-development",
  "description": "electron app that works with google drive to save screenshots and copy shortened url into the clipboard",
  "main": "build/index.js",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "electron .",
    "clean": "del-cli ./dist ./build ./coverage",
    "copy-assets": "copyfiles -u 1 \"src/assets/**/*\" build",
    "build": "npm run clean && npm run copy-assets && tsc -p ./config/tsconfig.build.json",
    "develop": "npm run clean && npm run copy-assets && tsc -p .",
    "lint": "tslint -c ./tslint.json -p ./config/tsconfig.build.json",
    "test": "npm run lint && npm run clean && jest -c ./jest.json",
    "test:watch": "npm run clean && jest -c ./jest.json --watch",
    "semantic-release": "semantic-release",
    "builder": "electron-builder --publish always --prerelease false --draft false"
  },
  "keywords": [
    "electron",
    "screenshots",
    "google drive"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:buehler/drive-shots.git"
  },
  "engines": {
    "node": ">=7",
    "npm": "*"
  },
  "author": "Christoph BÃ¼hler <christoph.buehler@bluewin.ch>",
  "license": "MIT",
  "build": {
    "appId": "ch.cbue.drive-shots",
    "productName": "Drive Shots",
    "publish": {
      "provider": "github",
      "releaseType": "release"
    },
    "files": [
      "build/**/*"
    ],
    "directories": {
      "buildResources": "src/_build-resources"
    },
    "mac": {
      "extendInfo": {
        "LSBackgroundOnly": 1,
        "LSUIElement": 1
      }
    },
    "linux": {
      "category": "Utility"
    }
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/github"
    ],
    "prepare": false,
    "publish": [
      "@semantic-release/github"
    ],
    "success": false,
    "fail": false
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "chokidar": "^2.0.2",
    "electron-settings": "^3.1.4",
    "electron-updater": "^2.21.0",
    "googleapis": "^27.0.0",
    "inversify": "^4.11.1",
    "mime": "^2.2.0",
    "moment": "^2.21.0",
    "opn": "^5.3.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^5.5.7",
    "tslib": "^1.9.0",
    "util.promisify": "^1.0.0"
  },
  "devDependencies": {
    "@types/chokidar": "^1.7.5",
    "@types/jest": "^22.2.0",
    "@types/node": "^9",
    "copyfiles": "^2.0.0",
    "del-cli": "^1.1.0",
    "electron": "^1.8.3",
    "electron-builder": "^20.5.1",
    "jest": "^22.4.2",
    "semantic-release": "^15.0.3",
    "ts-jest": "^22.4.1",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.7.0",
    "tsutils": "^2.22.2",
    "typescript": "^2.7.2"
  }
}
